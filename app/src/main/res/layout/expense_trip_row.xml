<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/expense_trip_linear"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/row_edit"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/type_img_row"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:padding="6dp"
            android:src="@drawable/food" />

        <RelativeLayout
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp">

            <TextView
                android:id="@+id/expense_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:text="Food"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <TextView
            android:id="@+id/expense_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="46dp"
            android:layout_toEndOf="@+id/type_img_row"
            android:paddingTop="10dp"
            android:text="Hamburger"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/expense_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="13dp"
            android:text="10/6/2022"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/status"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/expense_status"
            android:src="@drawable/red" />

        <TextView
            android:id="@+id/expense_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type_img_row"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="12dp"
            android:text="pending..."
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Expense_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="420dp"
            android:layout_marginTop="4dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/expense_amount"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="250dp"
            android:layout_marginLeft="210dp"
            android:layout_marginEnd="9dp"
            android:text="$2.0"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </RelativeLayout>


</LinearLayout>